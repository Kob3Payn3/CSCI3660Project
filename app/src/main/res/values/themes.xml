<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.WhackAMole" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.WhackAMole" parent="Base.Theme.WhackAMole" />

    <!-- Style for grid buttons -->
    <style name="WhackAMoleHole">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:background">@drawable/roundedbutton</item>
        <!--pulls the shape/bg of the grid buttons from roundedbutton.xml, which
        defines them as rounded-->
    </style>

    <!-- Style for other buttons that are not in the grid -->
    <style name="OtherGameButtons">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
</resources>